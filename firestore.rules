rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule - deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated users to read their own data
    match /Users/{userEmail} {
      allow read: if request.auth != null && request.auth.token.email == userEmail;
      // Only allow admins or the system to write user data
      allow write: if false; // This is handled by your backend code
      
      // Allow users to read and write their own responses
      match /responses/{responseId} {
        allow read, write: if request.auth != null && request.auth.token.email == userEmail;
      }
    }
  }
}